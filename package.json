{
    "name": "typescript-graphql-starter",
    "version": "1.0.0",
    "description": "",
    "main": "src/app.ts",
    "engines": {
        "node": "14"
    },
    "scripts": {
        "start": "ts-node src/app.ts",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "format": "prettier --config .prettierrc.json --write .",
        "lint": "eslint . --ext .ts",
        "build": "tsc -p ./tsconfig.json",
        "prepare": "husky install",
        "generate:codegen": "graphql-codegen --config codegen.yml",
        "generate:prisma": "npx prisma generate",
        "migration:generate": "npx prisma migrate dev",
        "migration:reset": "npx prisma migrate reset --force",
        "prisma:studio": "npx prisma studio"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/okanaslan/Typescript-Graphql-Starter.git"
    },
    "author": "okanaslan",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/okanaslan/Typescript-Graphql-Starter/issues"
    },
    "homepage": "https://github.com/okanaslan/Typescript-Graphql-Starter#readme",
    "dependencies": {
        "@graphql-codegen/cli": "^2.0.1",
        "@graphql-codegen/core": "^2.0.0",
        "@graphql-codegen/plugin-helpers": "^2.0.0",
        "@graphql-codegen/typescript": "^2.0.0",
        "@graphql-codegen/typescript-resolvers": "2.0.0",
        "@graphql-codegen/schema-ast": "^2.0.0",
        "@prisma/client": "^2.27.0",
        "@types/express": "^4.17.13",
        "apollo-server-express": "^3.1.2",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "graphql": "^15.5.1",
        "graphql-tools": "^8.1.0",
        "prisma": "^2.28.0",
        "ts-node": "^10.1.0",
        "typescript": "^4.3.5"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.29.0",
        "eslint": "^7.32.0",
        "husky": "^7.0.1",
        "jest": "^27.0.6",
        "lint-staged": "^11.1.2",
        "prettier": "^2.3.2",
        "prettier-plugin-prisma": "^2.28.0",
        "ts-jest": "^27.0.4"
    },
    "lint-staged": {
        "*.ts": "npm run lint",
        "*.{json,js,ts}": "npm run format"
    }
}
