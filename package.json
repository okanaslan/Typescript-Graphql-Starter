{
    "name": "typescript-graphql-starter",
    "version": "1.0.0",
    "description": "",
    "main": "src/app.ts",
    "engines": {
        "node": "14"
    },
    "scripts": {
        "prestart": "npm run prisma:generate",
        "start": "ts-node src/app.ts",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "format": "prettier --config .prettierrc.json --write .",
        "lint": "eslint . --ext .ts",
        "build": "tsc -p ./tsconfig.json",
        "prepare": "husky install",
        "prisma:generate": "npx prisma generate",
        "prisma:studio": "npx prisma studio",
        "migration:deploy": "npx prisma migrate deploy",
        "migration:generate": "npx prisma migrate dev",
        "migration:reset": "npx prisma migrate reset --force"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/okanaslan/Typescript-Graphql-Starter.git"
    },
    "author": "okanaslan",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/okanaslan/Typescript-Graphql-Starter/issues"
    },
    "homepage": "https://github.com/okanaslan/Typescript-Graphql-Starter#readme",
    "dependencies": {
        "@graphql-codegen/cli": "^2.2.0",
        "@graphql-codegen/core": "^2.1.0",
        "@graphql-codegen/plugin-helpers": "^2.1.1",
        "@graphql-codegen/schema-ast": "^2.2.0",
        "@graphql-codegen/typescript": "^2.2.2",
        "@graphql-codegen/typescript-resolvers": "2.2.1",
        "@prisma/client": "^3.1.1",
        "@types/express": "^4.17.13",
        "apollo-server-express": "^3.3.0",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "graphql": "^15.6.0",
        "graphql-middleware": "^6.1.6",
        "graphql-shield": "^7.5.0",
        "graphql-tools": "^8.2.0",
        "prisma": "^3.1.1",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.3"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.31.2",
        "eslint": "^7.32.0",
        "husky": "^7.0.2",
        "jest": "^27.2.1",
        "lint-staged": "^11.1.2",
        "prettier": "^2.4.1",
        "prettier-plugin-prisma": "^3.1.1",
        "ts-jest": "^27.0.5"
    },
    "lint-staged": {
        "*.ts": "npm run lint",
        "*.{json,js,ts}": "npm run format"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    }
}
